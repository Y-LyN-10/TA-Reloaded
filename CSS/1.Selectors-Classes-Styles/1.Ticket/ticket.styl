// Reset
@import '../../libs/reset.styl'
global-reset()

// Variables
dt-col-width = 130px

main
  background-color #595959
  font-family Arial, sans-serif
  padding 10px
  width 350px

h1
  font-size 20px
  color #adadad

dl
  font-size 14px
  margin-top: 20px;

dt
  font-style italic
  color white
  float left
  clear left
  width dt-col-width

dt:after
  content ':'

dd
  padding-bottom 20px

  &.main-info
    color: lightgoldenrodyellow

    &.link-post:hover
      text-decoration underline
      cursor pointer

  &.statistics
    color: lightgray

  &.available:before
    line-height 0
    content ' \25CF'
    color limegreen
    font-size 25px

  &.support, &.link-post
    margin-left: dt-col-width

  &.support
    margin-top -15px
    color red
    font-weight bold

  &.status-info
    font-weight bold
    color darkorange
