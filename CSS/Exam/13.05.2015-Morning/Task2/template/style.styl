// Basic resets

*
  margin 0
  padding 0

ul li
  text-decoration none
  list-style none

a
  text-decoration none
  color inherit

html, body {
  font-family: 'Segoe UI', 'Segoe UI Web', 'Segoe UI Symbol', 'Helvetica Neue', 'BBAlpha Sans', 'S60 Sans', Arial, sans-serif;
  background-color: #FFFFFF;
  padding: 0;
  margin: 0 auto;
  width: 1000px;
  font-weight: 400;
  -webkit-text-stroke-width: 0;
  -webkit-font-smoothing: subpixel-antialiased;
}

#header
  display inline
  font-size: 22px

#header:after
  clear both

#shellHeader
  height 65px

#logo #separator #headerTitle
  position relative

#logo
  background url('images/logo.png')
  background-repeat no-repeat
  height 60px
  width 175px
  float left
  overflow auto

#headerTitle
  font-weight bold
  float left
  margin 20px 10px

.separator
  margin-top 10px
  height 45px
  width 5px
  overflow auto
  background-color #333333
  float left

#search
  background-color #0078D7
  height 66px
  position relative

  .searchInput
    margin 15px 300px
    width 400px
    position relative
    padding 9px 0

#main
  color #2E3031
  padding 15px

  hr
    border 3px solid #2E3031

  h1
    font-size 30px

  h2
    padding 5px 0
    font-size 24px
    font-weight normal
  p
    font-size 16px
    margin 20px 0
    line-height 20px

#footer
  background-color #505050
  padding 20px
  color #CCCCCC
  height 20px
  font-size 14px

  ul li
    float right
    list-style none
    display inline
    margin-right 10px
    margin-left 10px

  #language
    float left

  #copyright
    float right
    font-weight bold